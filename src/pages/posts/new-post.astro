import { marked } from "marked";
import { ID } from "appwrite";
import { databases } from "../../lib/appwriter";
import { extname } from "path";
import { Buffer } from "buffer";

import Layout from "../../layouts/Layout.astro";
import TextSection from "../../components/TextSection.astro";
import Hr from "../../components/Hr.astro";

if (Astro.request.method === "POST") {
  const formData = await Astro.request.formData();

  // Obtener el archivo de imagen
  const imageFile = formData.get("imagepost") as File | null;

  // Definir la URL de la imagen predeterminada si no se selecciona ninguna imagen
  const defaultImageUrl = "/public/banner_azul_claro.webp";

  // Si no se proporciona un archivo de imagen, utilizar la imagen predeterminada
  const imageBase64 = imageFile
    ? await getImageBase64(imageFile)
    : await getDefaultImageBase64(defaultImageUrl);

  // Convierte el contenido markdown
  const content = await marked(String(formData.get("content")));

  // Construye el objeto de datos
  const data = {
    title: formData.get("title"),
    slug: formData.get("slug"),
    content,
    excerpt: formData.get("excerpt"),
    imagepost: `data:image/webp;base64,${imageBase64}`, // Agrega la imagen como base64
  };

  // Crea el documento en la base de datos
  const results = await databases.createDocument(
    "66454d410036db55430c",
    "6646440e002c2d76fb23",
    ID.unique(),
    data
  );

  // Redirecciona al nuevo post
  return Astro.redirect(`/posts/${results.slug}`);
}

async function getImageBase64(imageFile: File): Promise<string> {
  // Lee el contenido del archivo de imagen como un ArrayBuffer
  const imageBuffer = await imageFile.arrayBuffer();
  
  // Convierte el buffer a base64
  const base64String = Buffer.from(imageBuffer).toString("base64");

  console.log("Base64 String:", base64String);

  return base64String;
}




async function getDefaultImageBase64(defaultImageUrl: string): Promise<string> {
  // Fetch la imagen predeterminada
  const response = await fetch(defaultImageUrl);
  if (!response.ok) {
    throw new Error(
      `Error al obtener la imagen predeterminada: ${response.statusText}`
    );
  }
  const blob = await response.blob();
  const buffer = await blob.arrayBuffer();
  // Convierte el buffer a base64
  return Buffer.from(buffer).toString("base64");
}
