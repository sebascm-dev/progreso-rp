---
import { db, Admins } from "astro:db";

if (Astro.request.method === "POST") {
  const formData = await Astro.request.formData()
  const name = formData.get('name')
  const job = formData.get('job')
  const urlimage = formData.get('urlimage')
  const urlsocial = formData.get('urlsocial')

  if (
    typeof name === 'string' && typeof job === 'string' && typeof urlimage === 'string' && typeof urlsocial === 'string'
  ) {
    await db.insert(Admins).values({ name, job, urlimage, urlsocial})
  }
}

const administradores = await db.select().from(Admins);
---

<section class="mt-10">
  <form method="post">
    <div
      class="bg-[#B1DAF8]/10 bg-blur backdrop-blur backdrop-filter p-4 rounded-md shadow-xl flex flex-col items-start gap-2"
    >
      <h1 class="text-2xl lg:text-4xl font-pricedown uppercase mb-4 ml-2">
        Nuestros <span
          class="text-transparent bg-clip-text bg-gradient-to-r to-[#1BD1C2] from-[#15A9CE]"
          >User Team's</span
        >
      </h1>

      <input
        name="name"
        type="text"
        required
        placeholder="Nombre ..."
        class="p-2 rounded-md bg-transparent outline-none resize-none border-l-2 border-sky-50/5 focus:border-l-2 focus:border-sky-300/30 transition duration-300 w-full"
      />
      <input
        name="job"
        type="text"
        required
        placeholder="OcupaciÃ³n ..."
        class="p-2 rounded-md bg-transparent outline-none resize-none border-l-2 border-sky-50/5 focus:border-l-2 focus:border-sky-300/30 transition duration-300 w-full"
      />
      <input
        name="urlimage"
        type="text"
        required
        placeholder="Url Foto Perfil ..."
        class="p-2 rounded-md bg-transparent outline-none resize-none border-l-2 border-sky-50/5 focus:border-l-2 focus:border-sky-300/30 transition duration-300 w-full"
      />
      <input
        name="urlsocial"
        type="text"
        required
        placeholder="Url Social ..."
        class="p-2 rounded-md bg-transparent outline-none resize-none border-l-2 border-sky-50/5 focus:border-l-2 focus:border-sky-300/30 transition duration-300 w-full"
      />

      <div>
        <button
          title="Save"
          class="cursor-pointer flex items-center fill-sky-400 bg-sky-950 hover:bg-sky-900 active:border active:border-sky-400 rounded-md transition duration-300 p-2"
        >
          <svg
            viewBox="0 -0.5 25 25"
            height="20px"
            width="20px"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              stroke-linejoin="round"
              stroke-linecap="round"
              stroke-width="1.5"
